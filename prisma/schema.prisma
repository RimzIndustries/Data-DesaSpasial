// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  nama      String?
  password  String
  role      String   @default("user") // admin, user
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  berita    Berita[]
}

model Menu {
  id        String     @id @default(cuid())
  name      String     @unique
  menuItems MenuItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model MenuItem {
  id        String    @id @default(cuid())
  title     String
  path      String
  icon      String?
  parentId  String?
  menuId    String
  menu      Menu      @relation(fields: [menuId], references: [id])
  parent    MenuItem? @relation("SubMenu", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children  MenuItem[] @relation("SubMenu")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Berita {
  id          String   @id @default(cuid())
  judul       String
  slug        String   @unique
  konten      String
  gambar      String?
  kategori    String
  penulisId   String
  penulis     User     @relation(fields: [penulisId], references: [id])
  status      String   @default("draft") // draft, published
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Program {
  id               String   @id @default(cuid())
  nama             String
  deskripsi        String
  kategori         String
  status           String
  anggaran         Float
  sumberDana       String
  tanggalMulai     DateTime
  tanggalSelesai   DateTime
  penanggungJawab  String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Wilayah {
  id         String @id @default(cuid())
  nama       String
  kode       String @unique
  level      Int    // 1: Provinsi, 2: Kabupaten, 3: Kecamatan, 4: Desa
  parent     String?
  geometri   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Aset {
  id         String @id @default(cuid())
  nama       String
  kode       String @unique
  jenis      String
  lokasi     String
  tanggalPerolehan DateTime
  nilai      Float
  geometri   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Keuangan {
  id          String   @id @default(cuid())
  tanggal     DateTime
  jenis       String   // Pemasukan, Pengeluaran
  kategori    String
  deskripsi   String
  jumlah      Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Laporan {
  id         String   @id @default(cuid())
  judul      String
  jenis      String
  periode    String
  fileUrl    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
